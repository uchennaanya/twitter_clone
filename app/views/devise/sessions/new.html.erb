<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2>Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
            <div class="field">
              <div class="control">
                <%= f.input :email, wrapper: false,
                          required: false, autofocus: true,
                          input_html: { autocomplete: "email", class:"input" },
                          label_html: {class:"label"} %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", class:"input" },
                            label_html: {class:"label"}, wrapper: false %>
              </div>
            </div>
            <div class="field">
              <div class="control">

                <%= f.input :remember_me, label_html: {class:"label"}, input_html: {class:"radio"}, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class:"button is-info is-medium" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>         

        
